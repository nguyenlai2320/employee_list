<div class="wrapper_show">
    <div class="header">information of employee</div>
    <div class="content">
        <table border="1" cellspacing="0">
            <tr>
                <td>employee id</td>
                <td>first name</td>
                <td>last name</td>
                <td>email</td>
                <td>phone</td>
                <td>position</td>
            </tr>
            <tr>
                <td><%= @employee.employee_id %></td>
                <td><%= @employee.firstname %></td>
                <td><%= @employee.lastname %></td>
                <td><%= @employee.email %></td>
                <td><%= @employee.phone %></td>
                <td><%= @employee.position %></td>
            </tr>
            <tr>
                <td colspan=6>
                    <button><%= link_to "Edit", edit_employee_path(@employee) %></button>
                    <button>
                        <%= link_to "Delete", employee_path(@employee), data: {
                            turbo_method: :delete,
                            turbo_confirm: "Are you sure you want to delete this employee?"} %>
                    </button>
                </td>
            </tr>
        </table>
        <button>
            <%= link_to "home page", root_path%>
        </button>
    </div>
</div>
